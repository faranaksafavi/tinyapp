<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        <% if(authenticated){ %>
          <form class="form-inline d-flex justify-content-end  col-xs-4" method="POST" action="/logout">
            <label class="mr-1 mb-1" >Logged In As: <%=  username %></label>
            <button type="submit" class="btn  btn-primary mr-1 mb-1">Logout</button>
          </form>
          <% }else{ %>
            <form class="form-inline d-flex justify-content-end  col-xs-4" method="POST" action="/login">
              <label for="username" class="mr-1 mb-1">New URL: </label>
              <input type="text" class="col-md-4  mr-1 mb-1" value="Username" name="username" >
              <button type="submit" class="btn  btn-primary mr-1 mb-1">Login</button>
            </form>
            <% } %>
      </div>
    </div>
  </nav>
</header>